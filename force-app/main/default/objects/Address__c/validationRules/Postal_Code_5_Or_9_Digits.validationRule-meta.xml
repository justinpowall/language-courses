<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Postal_Code_5_Or_9_Digits</fullName>
    <active>true</active>
    <errorConditionFormula>NOT(REGEX(Postal_Code__c,
&quot;\\d{5}(-\\d{4})?&quot;))</errorConditionFormula>
    <errorDisplayField>Postal_Code__c</errorDisplayField>
    <errorMessage>Postal Code must be either 5 or 9 digits ##### or #####-####</errorMessage>
</ValidationRule>
